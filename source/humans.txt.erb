/* TEAM */
  <% data.humans.team.each do |member_obj| %>
    <%= "<#{member_obj[1]['name']}> - #{member_obj[1]['role']} - <#{member_obj[1]['contact']}>" %>
  <% end %>

/* THANKS */
<% if data.humans.shoutouts %>
    <% data.humans.shoutouts.each do |shoutout_obj| %>
    <%= "<#{shoutout_obj[1]['name']}> -- <#{shoutout_obj[1]['contact']}>" %>
  <% end %>
<% end %>
